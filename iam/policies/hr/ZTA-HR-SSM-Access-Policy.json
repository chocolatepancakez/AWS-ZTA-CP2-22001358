{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowSessionToInstanceA",
            "Effect": "Allow",
            "Action": [
                "ssm:StartSession",
                "ssm:TerminateSession",
                "ssm:DescribeSessions",
                "ssm:GetConnectionStatus"
            ],
            "Resource": [
                "arn:aws:ec2:ap-southeast-2:728280008824:instance/i-0df614b9ddd0eda63",
                "arn:aws:ssm:ap-southeast-2:728280008824:document/SSM-SessionManagerRunShell",
                "arn:aws:ssm:ap-southeast-2:728280008824:session/*"
            ]
        },
        {
            "Sid": "AllowSSMMessageChannel",
            "Effect": "Allow",
            "Action": [
                "ssm:DescribeInstanceInformation",
                "ssmmessages:CreateControlChannel",
                "ssmmessages:CreateDataChannel",
                "ssmmessages:OpenControlChannel",
                "ssmmessages:OpenDataChannel"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowReadOwnCommandHistory",
            "Effect": "Allow",
            "Action": [
                "ssm:ListCommands",
                "ssm:ListCommandInvocations"
            ],
            "Resource": "*"
        }
    ]
}
