{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ReadOnlyHRBucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::zta-data/database/hr_confidential_records.txt"
            ]
        },
        {
            "Sid": "AllowListBucket",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::zta-data"
            ],
            "Condition": {
                "StringEquals": {
                    "s3:prefix": [
                        "database/"
                    ]
                }
            }
        }
    ]
}
